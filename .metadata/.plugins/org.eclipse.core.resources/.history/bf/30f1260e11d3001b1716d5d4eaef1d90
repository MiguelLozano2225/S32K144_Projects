#include "pin_n_clock.h"

void Init_clocks(void)
{
	/* Enable clocks to peripherals (PORT modules) */

	PCC-> PCCn[PCC_PORTC_INDEX] = PCC_PCCn_CGC_MASK; /* Enable clock to PORT C*/
	PCC-> PCCn[PCC_PORTD_INDEX] = PCC_PCCn_CGC_MASK; /* Enable clock to PORT D*/
}

void Init_Pins(void)
{
	PTD->PDDR |= 1<<0;       /* Port D0: Data Direction= output */
	PORTD->PCR[0] = PORT_PCR_MUX(1); /* Port D0: MUX = GPIO */

	PTD->PDDR |= 1<<15;       /* Port D0: Data Direction= output */
	PORTD->PCR[15] = PORT_PCR_MUX(1); /* Port D0: MUX = GPIO */


	PTD->PDDR |= 1<<16;       /* Port D0: Data Direction= output */
	PORTD->PCR[16] = PORT_PCR_MUX(1); /* Port D0: MUX = GPIO */
}
